<div class="col-sm-4 col-lg-2 mb-5">
  <%= link_to wine_path(wine) do %>
    <div class="card bg-light text-white">
      <% if wine.images[0].nil? %>
        <%= image_tag "wine_sample.jpg", class:"card-img", alt:"..." %>
      <% else %>
        <%= image_tag wine.images[0], class:"card-img", alt:"..." %>
      <% end %>
      <div class="wine-digest card-img-overlay">
        <h5 class="card-title"><%= wine.name %></h5>
        <p class="wine-star card-text"><%= wine.star.name %></p>
        <p class="card-text"><%= l wine.created_at %></p>
      </div>
    </div>
  <% end %>
</div>